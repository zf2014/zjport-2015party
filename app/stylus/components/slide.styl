/*slide*/
$slideIndicatorSize               = 20px
$slideIndicatorBackground         = #000
$slideIndicatorColor              = #fff
$slideIndicatorHoverBackground    = #fff
$slideIndicatorHoverColor         = #000
// $slideArrowBackgroundImagePath    = "/img/common/slide-arrow.png"
$slideArrowHeight                 = 38px
$slideArrowWidth                  = 32px




.slide
  position: relative
  
.slide-inner
  overflow: hidden
  position: relative
  width: 100%
  
.slide-list
  list-style: none
  margin: 0
  width: 100%
  height: 100%

.slide-item
  float: left

.slide-arrow
  position: absolute
  width: 100%
  top: 50%
  margin-top: 0 - ($slideArrowHeight/2)
  a
    position: absolute
    width: $slideArrowWidth
    height: $slideArrowHeight
    $text-hide()
    // background-image: url($imgDomain + $slideArrowBackgroundImagePath)
.slide-prev-btn
  background-position: 0 100%
  left: 0
  &:hover
    background-position: 0 0
.slide-next-btn
  background-position: 100% 100%
  right: 0
  &:hover
    background-position: 100% 0
    
.slide-indicator
  margin: 0
  position: absolute
  list-style: none
  li
    float: left
  a
    display: block
    $square($slideIndicatorSize)
    text-align: center
    background-color: $slideIndicatorBackground
    color: $slideIndicatorColor
    font-weight: 700
    $opacity(70)
    cursor: pointer
    &:hover
      text-decoration: none
      background-color: $slideIndicatorHoverBackground
      color: $slideIndicatorHoverColor
  .on
    text-decoration: none
    background-color: $slideIndicatorHoverBackground
    color: $slideIndicatorHoverColor

