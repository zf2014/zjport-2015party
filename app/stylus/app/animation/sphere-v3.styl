$r    = 320px
$n    = 24
$c    = 16

$d    = 36px

$deg = unit(360/($n), 'deg')

$t    = 12s
$cLen = 2*PI*$r

.sphere-container
	position: absolute;
	width: 100%
	height 100%
	left 0
	top 0
	perspective: 800;
	perspective-origin(50%)

	/.flyin-pic
		position: absolute;
		right 0
		bottom 0
		opacity 0
		width: $d
		height $d
		border: 1px solid rgba(math(0, 'random')*255,math(0,'random')*255,math(0, 'random')*255, .8)
		// margin-left: -(@width/2)
		// margin-top: -(@height/2)

.sphere
	transform-style: preserve-3d;
	position: absolute;
	left 50%
	top 50%
	width: $r*2
	height: $r*2
	margin-left: -(@width/2)
	margin-top: -(@height/2)
	// animation: spin $t linear infinite
	> .ring
		transform-style: preserve-3d;
		position: absolute;
		left 0
		top 0
		width: 100%
		height 100%
		border-radius: 50%
		> .pic
			// opacity: 0
			position: absolute;
			left 50%
			top 50%
			width: $d
			height $d
			margin-left: -(@width/2)
			margin-top: -(@height/2)
			// border: 1px solid #000
			for $j in (0..($n - 1))
				&:nth-child({$tt = $j + 1})
					// background: rgba(math(0, 'random')*255,math(0,'random')*255,math(0, 'random')*255, 1)
					transform: rotateY(90deg) translateZ($r*cos( $deg*0.5 +  $j*$deg)) translateY($r*sin($deg*0.5 + $j*$deg))

					if $tt == 18 || $tt == 19 || $tt == 6 || $tt == 7
						transform: rotateY(90deg) translateZ($r*cos( $deg*0.5 +  $j*$deg)) translateY($r*sin($deg*0.5 + $j*$deg)) scale(.4)
					if $tt == 17 || $tt == 20 || $tt == 5 || $tt == 8
						transform: rotateY(90deg) translateZ($r*cos( $deg*0.5 +  $j*$deg)) translateY($r*sin($deg*0.5 + $j*$deg)) scale(.6)
									
	for $i in (0..$c)
		> .ring:nth-child({$i + 1})
			// border: 1px dotted rgba(math(0, 'random')*255,math(0,'random')*255,math(0, 'random')*255, 1)
			transform: rotateY(unit(180*$i/$c, 'deg'))
			for $j in (0..($n - 1))
				> .pic:nth-child({$tt = $j + 1})
					border: 1px solid rgba(math(0, 'random')*255,math(0,'random')*255,math(0, 'random')*255, .8)


@keyframes spin
	0%
		transform: rotateY(0deg)
	100%
		transform: rotateY(360deg)