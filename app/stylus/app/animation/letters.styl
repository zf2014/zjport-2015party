$w = 100
$d = 16px

.letter-container
	position: absolute;
	width: 100%
	height 100%
	left 0
	top 0
	pointer-events none
	transform-style: preserve-3d;
	perspective: 1200;
	perspective-origin(50%)
	> .letter
		// transform-style: preserve-3d
		position: absolute;
		width: $d
		height $d
		pointer-events none
		background-position: 0 0
		background-color: transparent
		background-repeat: no-repeat
		background-size: cover
